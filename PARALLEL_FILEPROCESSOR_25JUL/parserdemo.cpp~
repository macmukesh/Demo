#include <iostream>
#include <string.h>

using namespace std;

typedef struct 
{
	char COL1[15+1];
	char COL2[19+1];
	char COL3[5+1];
	char COL4[16+1];
}CommonData;

enum ColNm{
	TT001,
	TT002,
	TT003
};


typedef struct 
{
	char COL1[15+1];
	char COL2[19+1];
	char COL3[5+1];
	char COL4[16+1];

	size_t GetRowLen(ColNm enColId)
	{
			size_t colsz=0;
			switch(enColId)
			{
				case TT001:
								colsz=sizeof(COL1);
								break;
				case TT002:
								colsz=sizeof(COL2);
								break;
				case TT003:
								colsz=sizeof(COL3);
								break;
			}
			return colsz;
	}


	bool SetData(ColNm enColId,const char * value,const size_t valSz)
	{
			char * out=NULL;
			switch(enColId)
			{
				case TT001:
								out=COL1;
								break;
				case TT002:
								out=COL2;
								break;
				case TT003:
								out=COL3;
								break;
			}

			if(valSz<GetRowLen(enColId))
			{
				strcpy(out,value);
				return true;
			}
			else
			return false;
	}

	char * GetData(ColNm enColId)
	{
			char * out=NULL;
			switch(enColId)
			{
				case TT001:
								out=COL1;
								break;
				case TT002:
								out=COL2;
								break;
				case TT003:
								out=COL3;
								break;
			}
		return out;
	}
}Model;

int main()
{
	Model ObjModel;
	char name[10+1];
	memset(name,0x00,sizeof(name));
	strcpy(name,"MY");

	cout<<"Size1:"<<sizeof(CommonData)<<endl;
	cout<<"Size Model:"<<sizeof(Model)<<endl;

	ColNm coldid=TT003;
	bool ret=ObjModel.SetData(coldid,name,strlen(name));
	cout<<"Function execution status :"<<ret<<endl;
	cout<<"COLID:"<<coldid<<" VALUE:"<<ObjModel.GetData(coldid)<<endl;
}
